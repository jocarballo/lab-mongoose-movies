<h2>Celebrities</h2>

{{#each celebrities}}
    <div>
        {{name}}
        <a href="/celebrities/{{_id}}"></a>
    </div>

    <form action="/celebrities/{{_id}}/delete" method="POST">
        <button type="submit">Delete</button>
    </form>

      <form action="/celebrities/{{_id}}/edit" method="GET">
        <button type="submit">Edit</button>
    </form>
{{/each}}

<a href="/celebrities/new">Create new celebrity!</a>

